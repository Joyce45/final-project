<Page
    x:Class="fp.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:fp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:UserLibrary ="using:UserLibrary"
    mc:Ignorable="d"
    Loaded="Page_Loaded"
    >

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Horizontal">


            <GridView  ItemsSource="{x:Bind NoteCollection}"  Width="300" HorizontalAlignment="Left"   IsItemClickEnabled="True"  ItemClick="GridView_ItemClick">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="UserLibrary:Note">
                        <StackPanel Margin="20">
                            <TextBlock Text="{x:Bind Title}" FontSize="40" Width="300"  Height="50"></TextBlock>

                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>

            </GridView>
            <RelativePanel  >
                <TextBox Name="Titlebox" Width="300" Height="70" FontSize="48"></TextBox>
                <RichEditBox Name="homeditor" Width="700" Height="500" RelativePanel.Below="Titlebox" ></RichEditBox>
                <Button Name="Delete" Click="Delete_Click" Width="292" Height="100" FontSize="30" RelativePanel.Below="homeditor">删除笔记，请刷新</Button>
                <Button Name="Save" Click="Save_Click" Width="292" Height="100" FontSize="30" RelativePanel.Below="Delete">保存笔记，请刷新</Button>
            </RelativePanel>

        </StackPanel>
       

    </Grid>
</Page>
